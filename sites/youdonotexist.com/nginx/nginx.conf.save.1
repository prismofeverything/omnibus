upstream youdonotexist {
    #### Replace these with the ports for your mongrel cluster: 
    server 127.0.0.1:4567;
}

server {
    listen 80;
    server_name youdonotexist.com *.youdonotexist.com;
    root /home/rspangler/sites/youdonotexist.com/app/public;

    index  index.html;

    location / {

        if (-f $request_filename) {
            break;
        }

        proxy_set_header X-Real-IP  $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect false;

        if (-f $request_filename.html) {
            rewrite (.*) $1.html break;
        }

        if (-f cache/$request_filename.html) {
            rewrite (.*) $1.html break;
        }

        if (!-f $request_filename) {
            proxy_pass http://youdonotexist;
            break;
        }
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   html;
    }
}

